{ config, lib, pkgs, ... }:

with lib;

let cfg = config.services.windscribe;
in {
  options.services.windscribe = {
    enable = mkEnableOption "Windscribe VPN";

    package = mkOption {
      type = types.package;
      default = pkgs.callPackage ./package.nix { };
      description = "The Windscribe package to use.";
    };

    autoStart = mkOption {
      type = types.bool;
      default = false;
      description = "Whether to auto-start the Windscribe service on boot.";
    };
  };

  config = mkIf cfg.enable {
    nixpkgs.config.allowUnfree = true;

    environment.systemPackages = [ cfg.package ];

    systemd.packages = [ cfg.package ];

    users.groups.windscribe = {};

    networking.networkmanager.enable = true;

    security.polkit.enable = true;

    security.wrappers = {
      windscribe = {
        source = "${cfg.package}/opt/windscribe/Windscribe";
        owner = "root";
        group = "windscribe";
        setuid = true;
        setgid = true;
      };
      windscribe-cli = {
        source = "${cfg.package}/opt/windscribe/windscribe-cli";
        owner = "root";
        group = "windscribe";
        setuid = true;
      };
      windscribe-helper = {
        source = "${cfg.package}/opt/windscribe/helper";
        owner = "root";
        group = "windscribe";
        setuid = true;
      };
    };

    systemd.tmpfiles.rules = [
      "d /var/log/windscribe 0755 root root -"
      "d /var/lib/windscribe 0755 root root -"
    ];

    environment.etc = {
      "windscribe/cert.pem".source = "${cfg.package}/etc/windscribe/cert.pem";
      "windscribe/cgroups-down".source =
        "${cfg.package}/etc/windscribe/cgroups-down";
      "windscribe/cgroups-up".source =
        "${cfg.package}/etc/windscribe/cgroups-up";
      "windscribe/dns-leak-protect".source =
        "${cfg.package}/etc/windscribe/dns-leak-protect";
      "windscribe/install-update".source =
        "${cfg.package}/etc/windscribe/install-update";
      "windscribe/update-network-manager".source =
        "${cfg.package}/etc/windscribe/update-network-manager";
      "windscribe/update-resolv-conf".source =
        "${cfg.package}/etc/windscribe/update-resolv-conf";
      "windscribe/update-systemd-resolved".source =
        "${cfg.package}/etc/windscribe/update-systemd-resolved";
      "windscribe-connect".text = ''
        #!/bin/sh
        ${cfg.package}/bin/windscribe-cli connect &
      '';
      "windscribe-connect".mode = "755";
    };

    systemd.services.windscribe-helper = {
      description = "Windscribe Control Daemon";
      serviceConfig = {
        User = "mark";
        ExecStart = "${cfg.package}/opt/windscribe/windscribectrld run";
        Restart = "always";
        AmbientCapabilities = [ "CAP_NET_BIND_SERVICE" ];
        WorkingDirectory = "/var/lib/windscribe";
      };
      wantedBy = [ "multi-user.target" ];
    };

    # systemd.user.services.windscribe =
    #   mkIf cfg.autoStart { wantedBy = [ "default.target" ]; };

    systemd.user.services.windscribe = mkIf cfg.autoStart {
      description = "Windscribe VPN connection";
      environment = lib.mkForce {
        LOCALE_ARCHIVE = null;
        TZDIR = null;
      };
      serviceConfig = {
        Type = "oneshot";
        ExecStart = "/etc/windscribe-connect";
      };
      wantedBy = [ "graphical-session.target" ];
      after = [ "graphical-session.target" ];
    };
  };
}